<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Welcome to BulletZone!"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/welcome"
        android:layout_alignParentStart="true"
        android:layout_marginStart="410dp"
        android:layout_marginTop="87dp"
        android:text="Join game as"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/shipView"
        android:layout_width="175dp"
        android:layout_height="165dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="490dp"
        android:layout_marginBottom="111dp"
        android:clickable="true"
        android:src="@drawable/ship1_right" />

    <ImageView
        android:id="@+id/tankView"
        android:layout_width="264dp"
        android:layout_height="167dp"
        android:layout_alignBottom="@+id/shipView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="229dp"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:src="@drawable/tank1_right_full" />

    <Button
        android:id="@+id/replayButton"
        android:layout_width="909dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="15dp"
        android:text="Replay last played game"
        android:textSize="30sp" />

</RelativeLayout>
