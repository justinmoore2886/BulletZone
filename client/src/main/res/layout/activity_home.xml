<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:text="Welcome to BulletZone!"
        android:textSize="36sp" />

    <Button
        android:id="@+id/replayButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="697dp"
        android:text="Replay last played game"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/shipView"
        android:layout_width="262dp"
        android:layout_height="340dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="322dp"
        android:layout_marginTop="279dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@drawable/ship1_right"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/tankView"
        android:layout_width="268dp"
        android:layout_height="409dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="238dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@drawable/tank1_right_full"
        android:clickable="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shipView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="232dp"
        android:text="Join game as"
        android:textSize="24sp" />

</RelativeLayout>
